<%-include('./layout/main.ejs') %>


  <main style="display: flex; ">
   <% if(products.length>0) { %>
    <div>
    <% for(let prod of products) { %>
      <div style="border: 2px solid black; margin: 20px; padding: 20px;">
        <h1> <%= prod.title%> </h1>
        <img src="<%= prod.image%>" alt="" >
        <h4> <%= prod.desc %></h4>
        <h3>$ <%= prod.price %></h3>   
        <a href="/editproducts/<%= prod.id %>?edit=true"><button>Edit</button></a>
    <button>Delete</button>
    <a href="/products/<%= prod.id %>"><button>Details</button></a>
  </div>
</div> 
    <% } %>

    <%} else {%>
      <h1>No Preducts Found</h1>
    <%}%>
  
  </main>