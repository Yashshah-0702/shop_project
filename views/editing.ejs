<%-include('./layout/main.ejs') %>


  <main>
    <form action="/<% if (editing) { %>edit-product<% } else { %>items<% } %>" method="post">
        <label for="title">Enter Name Of Product:-</label>
        <input type="text" name="title" value="<% if(editing) {%> <%=product.title%> <%}%>"> <br>
        <label for="image">Enter Description:-</label> 
        <input type="text" name="desc" value="<% if(editing) {%> <%=product.desc%> <%}%>"> <br>
        <label for="image">Enter Price:-</label> 
        <input type="text" name="price" value="<% if(editing) {%> <%=product.price%> <%}%>"> <br>
        <% if(editing) { %>
            <input type="hidden" value="<%= product.id%>" name="productId">
        <% } %>
        <button type="submit"> <%if (editing) { %> Update-Product <%} else { %> Add-Product <% }%> </button>
    </form>
  </main>